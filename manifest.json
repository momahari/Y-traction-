{
    "manifest_version": 3,
    "name": "Y-traction",
    "description": "Hide YouTube ads, comments, and more functionalities to be more productive when using YouTube.",
    "version": "2.1.0",
    "action": {
        "default_popup": "popup/popup.html"
    },
    "icons": {
        "16": "icons/icon16.png",
        "32": "icons/icon32.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
    },
    "background": {
        "service_worker": "background.js"
    },
    "permissions": [
        "storage",
        "notifications",
        "activeTab",
        "tabs",
        "scripting",
        "webNavigation",
        "declarativeNetRequest"
    ],
    "host_permissions": [
        "https://*.youtube.com/*",
        "<all_urls>"
    ],
    "content_scripts": [
        {
            "matches": ["https://*.youtube.com/*"],
            "js": ["content.js"],
            "run_at": "document_end"
        }
    ],
    "web_accessible_resources": [
        {
            "resources": ["icons/*"],
            "matches": ["<all_urls>"]
        }
    ]
}
